<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="mapbox_plugin_location_layer_blue">#4882C6</color>
    <color name="mapbox_plugin_location_layer_gray">#263D57</color>
    <declare-styleable name="LocationLayer"><attr format="reference" name="backgroundDrawable"/><attr format="reference" name="foregroundDrawable"/><attr format="reference" name="bearingDrawable"/><attr format="reference" name="navigationDrawable"/><attr format="float" name="accuracyAlpha"/><attr format="color" name="accuracyColor"/></declare-styleable>
    <style name="LocationLayer">
        <item name="backgroundDrawable">@drawable/mapbox_user_stroke_icon</item>
        <item name="foregroundDrawable">@drawable/mapbox_user_icon</item>
        <item name="bearingDrawable">@drawable/mapbox_user_bearing_icon</item>
        <item name="navigationDrawable">@drawable/mapbox_user_puck_icon</item>

        <item name="accuracyAlpha">0.15</item>
        <item name="accuracyColor">@color/mapbox_plugin_location_layer_blue</item>
    </style>
</resources>